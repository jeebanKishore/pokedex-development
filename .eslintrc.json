{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "react-app",
    "react-app/jest",
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "overrides": [
    {
      "files": ["**/*.test.js", "**/*.test.jsx","*.ts", "*.tsx"],
      "env": {
        "jest": true
      },
      "rules": {
        "no-undef": "off",
        "import/no-anonymous-default-export": "off"
      }
    }
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project":"./tsconfig.json",
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["react", "@typescript-eslint", "jsx-a11y", "testing-library"],
  "rules": {
    // "react/react-in-jsx-scope":"off",
    // "react/prop-types":"off",
    // "no-unused-vars":"off",
    "no-console": 1,
    "no-undef": "off"
    // "no-empty":"off"
  }
}
